{
  "extends": "@vtex/tsconfig",
  "compilerOptions": {
    "noEmitOnError": false,
    "lib": [
      "es2017",
      "dom",
      "es2018.promise"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node"
    ],
    "moduleResolution": "node",
    "target": "es2017",
    "module": "esnext"
  },
  "include": [
    "./typings/*.d.ts",
    "./**/*.tsx",
    "./**/*.ts",
    "./**/*.jsx",
    "./**/*.js"
  ]
}
